<Page x:Class="QuanLyBanHang.UI.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý sản phẩm">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- Danh sách -->
        <GroupBox Grid.Column="0" Header="Danh sách sản phẩm" Margin="0,0,10,0">
            <DataGrid x:Name="dgProducts" AutoGenerateColumns="False" IsReadOnly="True"
                      SelectionChanged="dgProducts_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã" Binding="{Binding ProductId}" Width="50"/>
                    <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="Danh mục" Binding="{Binding CategoryName}"/>
                    <DataGridTextColumn Header="Giá nhập" Binding="{Binding CostPrice, StringFormat=N0}"/>
                    <DataGridTextColumn Header="Giá bán" Binding="{Binding SellingPrice, StringFormat=N0}"/>
                    <DataGridTextColumn Header="Tồn kho" Binding="{Binding Quantity}"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        
        <!-- Form -->
        <GroupBox Grid.Column="1" Header="Thông tin sản phẩm">
            <StackPanel Margin="10">
                <TextBlock Text="Tên sản phẩm:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtName" Height="30" Margin="0,0,0,10"/>
                
                <TextBlock Text="Danh mục:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbCategory" Height="30" Margin="0,0,0,10"
                          DisplayMemberPath="CategoryName" SelectedValuePath="CategoryId"/>
                
                <TextBlock Text="Giá nhập:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtCostPrice" Height="30" Margin="0,0,0,10"/>
                
                <TextBlock Text="Giá bán:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtSellingPrice" Height="30" Margin="0,0,0,10"/>
                
                <TextBlock Text="Số lượng:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtQuantity" Height="30" Margin="0,0,0,20"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Thêm" Width="70" Height="30" Margin="5" Click="btnAdd_Click"/>
                    <Button Content="Sửa" Width="70" Height="30" Margin="5" Click="btnUpdate_Click"/>
                    <Button Content="Xóa" Width="70" Height="30" Margin="5" Click="btnDelete_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
