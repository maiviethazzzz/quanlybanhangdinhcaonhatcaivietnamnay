<Page x:Class="QuanLyBanHang.UI.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý người dùng">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>
        
        <GroupBox Grid.Column="0" Header="Danh sách người dùng" Margin="0,0,10,0">
            <DataGrid x:Name="dgUsers" AutoGenerateColumns="False" IsReadOnly="True"
                      SelectionChanged="dgUsers_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50"/>
                    <DataGridTextColumn Header="Tên đăng nhập" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Vai trò" Binding="{Binding RoleName}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        
        <GroupBox Grid.Column="1" Header="Thông tin người dùng">
            <StackPanel Margin="10">
                <TextBlock Text="Tên đăng nhập:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Height="28" Margin="0,0,0,10"/>
                
                <TextBlock Text="Mật khẩu:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="28" Margin="0,0,0,10"/>
                
                <TextBlock Text="Họ tên:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFullName" Height="28" Margin="0,0,0,10"/>
                
                <TextBlock Text="Vai trò:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbRole" Height="28" Margin="0,0,0,15"
                          DisplayMemberPath="RoleName" SelectedValuePath="RoleId"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Thêm" Width="60" Height="28" Margin="5" Click="btnAdd_Click"/>
                    <Button Content="Sửa" Width="60" Height="28" Margin="5" Click="btnUpdate_Click"/>
                    <Button Content="Xóa" Width="60" Height="28" Margin="5" Click="btnDelete_Click"/>
                </StackPanel>
                
                <Button Content="Đổi mật khẩu" Height="28" Margin="0,10,0,0" Click="btnChangePassword_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
