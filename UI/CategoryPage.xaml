<Page x:Class="QuanLyBanHang.UI.CategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý danh mục">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        
        <GroupBox Grid.Column="0" Header="Danh sách danh mục" Margin="0,0,10,0">
            <DataGrid x:Name="dgCategories" AutoGenerateColumns="False" IsReadOnly="True"
                      SelectionChanged="dgCategories_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã" Binding="{Binding CategoryId}" Width="80"/>
                    <DataGridTextColumn Header="Tên danh mục" Binding="{Binding CategoryName}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        
        <GroupBox Grid.Column="1" Header="Thông tin">
            <StackPanel Margin="10">
                <TextBlock Text="Tên danh mục:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtName" Height="30" Margin="0,0,0,20"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Thêm" Width="60" Height="30" Margin="5" Click="btnAdd_Click"/>
                    <Button Content="Sửa" Width="60" Height="30" Margin="5" Click="btnUpdate_Click"/>
                    <Button Content="Xóa" Width="60" Height="30" Margin="5" Click="btnDelete_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
