<Window x:Class="QuanLyBanHang.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="HỆ THỐNG QUẢN LÝ BÁN HÀNG" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Tên đăng nhập:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Height="30" FontSize="14"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Mật khẩu:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="30" FontSize="14"/>
        </StackPanel>
        
        <TextBlock x:Name="lblError" Grid.Row="3" Foreground="Red" 
                   Margin="0,0,0,10" TextWrapping="Wrap"/>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnLogin" Content="Đăng nhập" 
                    Width="100" Height="35" Margin="0,0,10,0"
                    Click="btnLogin_Click"/>
            <Button x:Name="btnCancel" Content="Thoát" 
                    Width="100" Height="35"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
